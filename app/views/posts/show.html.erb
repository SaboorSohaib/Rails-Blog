<%content_for :title, "#{@user.name} | #{@post.title}"%>
<%= render "user_post", post: @post %>
<div>
  <%@post.comments.each do |comment|%>
      <div>
          <p>
              <span><strong><% comment.author_id %>:</strong></span>
              <span><% comment.text %></span>
          </p>
      </div>
  <%end%>
</div>

<%= form_with model: @comment, url: user_post_path, method: :post, scope: :comment do |f| %>
  <div>
    <%= f.text_area :text, placeholder: "Add Comment" %>
    <%= f.submit "Comment" %>
  </div>
  <% end %>