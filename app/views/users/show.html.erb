<% content_for :title, "#{@user.name}'s - Blog" %>
<section>
  <%= render "user", user: @user%>
  <div class="user-bio">
      <h3>Bio</h3>
      <div class="bio"><%= @user.bio %></div>
      <br>
  </div>
      <div class="user-post">
        <%@user.most_recent_post.each do |post|%>
          <%= link_to user_post_path(@user, post) do %>
            <%= render "posts/post", post: post%>
          <%end%>
        <%end%>
      </div>
        <%= link_to user_posts_path(@user) do %>
          <button type="button" class="posts-btn">See all Posts</button>
        <%end%>
</section>